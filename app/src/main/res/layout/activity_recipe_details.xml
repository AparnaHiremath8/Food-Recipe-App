<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetails">
    <ImageView
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avocado Toast with Poached Egg"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="22sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ingredientsTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 ripe avocado\n2 slices of whole-grain bread\n2 large eggs\nSalt and pepper to taste\nOptional toppings: red pepper flakes, cherry tomatoes, feta cheese"
            android:textColor="@color/black"
            android:padding="16dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:text="Instructions"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/instructionsTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toast the slices of bread to your liking.\n
    While the bread is toasting, mash the ripe avocado in a bowl and season with salt and pepper.\n
    Poach the eggs by bringing a pot of water to a simmer, adding a splash of vinegar, and gently cracking the eggs into the simmering water. Cook for 3-4 minutes for a runny yolk.\n
    Spread the mashed avocado evenly on the toasted bread slices.\n
    Carefully place the poached eggs on top of the avocado.\n
    Sprinkle with additional salt, pepper, and any optional toppings you prefer"
            android:textColor="@color/black"
            android:padding="16dp"
            android:textSize="18sp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>